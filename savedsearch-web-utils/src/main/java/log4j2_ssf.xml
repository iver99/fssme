<?xml version="1.0" encoding="UTF-8"?>
<Configuration debug="false">
	<Appenders>
		<RollingFile name="FILE" 
						filename="/var/opt/ORCLemaas/logs/savedsearchService/savedSearchService.log" 
						filePattern="/var/opt/ORCLemaas/logs/savedsearchService/savedSearchService.log.%d{yyyy-MM-dd}"
						append="true">
			<PatternLayout pattern="%d{ISO8601} %-5p [%t] - [%c{1}] %l %m%n"/>
			<Policies>
				<TimeBasedTriggeringPolicy interval="1" modulate="true"/>
			</Policies>
		</RollingFile>
		<Async name="ASYNC">
    		<AppenderRef ref="FILE"/>
    	</Async>
	</Appenders>
	<Loggers>
		<Logger name="oracle.sysman.emaas.platform.savedsearch" level="INFO"/>
		<Root>
    		<AppenderRef ref="ASYNC"/>
    	</Root>
	</Loggers>
</Configuration>